<form method="POST" action="/messages/send">
    <div class="form-group{{#if error.to}} has-error{{/if}}">
        <label for="to">To:</label>
        <select class="form-control" name="to"{{#if error.to}} autofocus{{/if}}>
            <option value="">Select Recipient:</option>
            {{#each to}}
                <option value="{{this._id}}"{{#if this.selected}} selected{{/if}}>{{this.fullName}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group{{#if error.subject}} has-error{{/if}}">
        <label for="subject">Subject:</label>
        <input class="form-control" type="text" name="subject"{{#if subject}} value="{{subject}}"{{/if}}{{#if error.subject}} autofocus{{/if}}>
    </div>
    <div class="form-group{{#if error.content}} has-error{{/if}}">
        <label for="content">Message:</label>
        {{> richEditor name='content'}}
    </div>
    <button class="btn btn-primary" type="submit">Send</button>
</form>