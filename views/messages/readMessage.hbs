<section class="panel">
    <a class="btn btn-default" href="/messages/new" role="button">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Compose a new message
    </a>
</section>
<article class="msg">
    <header>
        <dl class="dl-horizontal">
            <dt>From</dt>
            <dd>{{msg.from.fullName}}</dd>
            <dt>To</dt>
            <dd>{{msg.to.fullName}}</dd>
            <dt>Subject</dt>
            <dd>{{msg.subject}}</dd>
            <dt>Date</dt>
            <dd>{{formatDate msg.date 'lll'}}</dd>
        </dl>
    </header>
    <section>
        {{{msg.content}}}
    </section>
    <footer class="clearfix">
        {{#isNotEq user.fullName msg.from.fullName}}
        <form class="pull-left" method="POST" action="/messages/reply">
            <input type="hidden" name="origId" value="{{msg._id}}">
            <input type="hidden" name="to" value="{{msg.from._id}}">
            <button class="btn btn-primary" type="submit">Reply</button>
        </form>
        {{/isNotEq}}
        <form class="pull-right" method="POST" action="/messages/forward">
            <input type="hidden" name="origId" value="{{msg._id}}">
            <button class="btn btn-default" type="submit">Forward</button>
        </form>
    </footer>
</article>