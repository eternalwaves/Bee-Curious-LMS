<form method="POST" action="/courses/save">
    <div class="form-group">
        <label for="code">Code</label>
        <input class="form-control" type="text" name="code"{{#if course.code}} value="{{course.code}}"{{/if}} required autofocus>
    </div>
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" name="title"{{#if course.title}} value="{{course.title}}"{{/if}} required>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        {{> richEditor name='description' content=course.description}}
    </div>
    <div class="form-group">
        <label for="startDate">Start Date</label>
        {{> datePicker name='startDate' content=course.startDate}}
    </div>
    <div class="form-group">
        <label for="endDate">End Date</label>
        {{> datePicker name='endDate' content=course.endDate}}
    </div>
    <div class="form-group">
        <label for="facilitators">Facilitators <small>Ctrl+click to select multiples</small></label>
        <select class="form-control" name="facilitators" multiple>
            {{#each facilitators}}
                <option value="{{this._id}}"{{#if this.selected}} selected{{/if}}>{{this.fullName}}</option>
            {{/each}}
        </select>
    </div>
    <button class="btn btn-primary" type="submit">Create</button>
    <button class="btn btn-default" type="reset">Reset</button>
</form>